<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
	  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
	  <title>Helios solutions</title>
	  <%= stylesheet_link_tag 'scaffold','user' %>
    </head>
    <body>
        <div id="Wrapper">
            <div id="wrapperHeader">
                	<h1>Helios solutions</h1>
            </div>
            <div id="wrapperBody" class="login_form">
<% form_tag ({:controller=>"users", :action =>'verify_login' },{:name=>"login"}) do %>
<table>
    <tr>
        <td colspan="2">
            <div class="flash_notice">
                <%= flash[:notice] if flash[:notice]!= nil %>
            </div>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <div class="login_heading">
                Login
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <label for="login_email">
                Email address:
            </label>
        </td>
        <td>
            <%= text_field :login, :email,:size=>"25",:class=>'login_field' %>
        </td>
    </tr>
    <tr>
        <td>
            <label for="login_password">
                Password:
            </label>
        </td>
        <td>
            <%= password_field :login, :password,:size=>"25",:class=>'login_field' %>
        </td>
    </tr>
</table>
<div>
    <div>
        <input type="submit" value="Sign in" name="commit"/>
    </div>
</div>
<%end %>
  <script type="text/javascript">
	document.getElementById('login_email').focus();  
  </script>	


            </div>
        </div>
        <div id="wrapperFooter">
        </div>
    </body>
</html>